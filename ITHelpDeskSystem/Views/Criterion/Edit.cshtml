@model ITHelpDeskSystem.ViewModels.CriterionViewModel

@{
    ViewBag.Title = "Edit";
}


<h2 style="margin-top:1.5em">Edit @Html.DisplayFor(model => model.CriterionDescription) criterion</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

      <div class="form-group">
            @Html.LabelFor(model => model.ActiveCriterion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ActiveCriterion)
                    @Html.ValidationMessageFor(model => model.ActiveCriterion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CriterionDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CriterionDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CriterionDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-actions no-color">
            <div style="display:inline; margin-right:40px">@Html.ActionLink("Back to criteria list", "Index", null, new { @class = "btn btn-info" })</div>
            <button class="btn btn-success pull-right "> <span class="glyphicon glyphicon-check" type="submit"></span> Done</button>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
