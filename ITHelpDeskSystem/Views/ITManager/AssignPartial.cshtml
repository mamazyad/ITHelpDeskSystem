@model IEnumerable<ITHelpDeskSystem.ViewModels.AssignmentViewModel>


<h4 style="margin-bottom:-1em">Assignments</h4>
<hr />
@if ((Model.Count() == 0))
{
    <h5 id="grey"> There are no assignments to display.</h5>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssignmentDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.AssignedByName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignmentComment)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AssignedByName)
            </td>
            <td>
                 @if (!String.IsNullOrEmpty(item.AssignmentComment))
                {
                     @Html.DisplayFor(modelItem => item.AssignmentComment)
                }
                @if (String.IsNullOrEmpty(item.AssignmentComment))
                {
                    <p style="color:lightgray">No comment</p>
                }
            </td>

        </tr>
    }

</table>
