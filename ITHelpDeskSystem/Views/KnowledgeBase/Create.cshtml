@model ITHelpDeskSystem.ViewModels.KnowledgeBaseViewModel

@{
    ViewBag.Title = "New solution";
}

<h2 style="margin-top:1.5em">Add new solution</h2>

@using (Html.BeginForm("Create", "KnowledgeBase", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

       @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row" style="display:inline-block">
        <div class="form-group col-sm-4" style="margin-left: .75em">
            @Html.LabelFor(model => model.Topic, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Topic, new { htmlAttributes = new { @class = "form-control", placeholder = "e.g. Hardware" } })
            @Html.ValidationMessageFor(model => model.Topic, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-sm-4" style="margin-left: .75em">
            @Html.LabelFor(model => model.IncidentTitle, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.IncidentTitle, new { htmlAttributes = new { @class = "form-control", placeholder = "e.g. printer jam" } })
            @Html.ValidationMessageFor(model => model.IncidentTitle, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-sm-3" style="margin-left: .75em">
            @Html.LabelFor(model => model.IncidentDescription, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.IncidentDescription, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
            @Html.ValidationMessageFor(model => model.IncidentDescription, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-sm-1" style="margin-left: 1em; margin-bottom:-.5em">
            @Html.LabelFor(model => model.KBAttachment, htmlAttributes: new { @class = "control-label" })
            @Html.TextBox("Attachment", "", new { type = "file" })
        </div>
    </div>

    <div class="form-group " style="margin-left: 1em">
        @Html.LabelFor(model => model.SolutionDescription, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.SolutionDescription, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
        @Html.ValidationMessageFor(model => model.SolutionDescription, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-actions no-color">
        <div style="display:inline; margin-right:40px">@Html.ActionLink("Back to all sulotions", "Index", null, new { @class = "btn btn-info" })</div>
        <button class="btn btn-success pull-right "> <span class="glyphicon glyphicon-check" type="submit"></span> Done</button>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/tinymce.js"></script>
    <script src="~/Scripts/Main.js"></script>
}
